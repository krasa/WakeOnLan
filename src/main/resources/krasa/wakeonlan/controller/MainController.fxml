<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="krasa.wakeonlan.controller.MainController">
   <children>
       <FlowPane hgap="10.0" prefHeight="45.0" prefWidth="414.0" vgap="10.0">
